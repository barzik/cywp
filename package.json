{
  "name": "cypress-for-wordpress",
  "version": "0.0.0-development",
  "description": "cypress environment builder for wordpress",
  "author": "Omri BarZik <omri@bar-zik.com>",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OmriBarZik/cywp.git"
  },
  "bugs": {
    "url": "https://github.com/OmriBarZik/cywp/issues"
  },
  "directories": {
    "lib": "./src ",
    "test": "./test",
    "bin": "./bin"
  },
  "files": [
    "src/**",
    "bin/**"
  ],
  "scripts": {
    "start": "node index",
    "test": "jest",
    "coverage": "jest --coverage",
    "coverage:ci": "npm run coverage && codecov",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pre-push": "run-p coverage lint",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "cypress": ">=6.7.x"
  },
  "dependencies": {
    "command-exists": "1.2.9"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.1.1",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@types/jest": "^26.0.14",
    "codecov": "^3.7.2",
    "conventional-changelog-eslint": "^3.0.9",
    "eslint": "7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsdoc": "^30.6.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-spellcheck": "0.0.17",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^6.0.0",
    "jest": "^26.5.2",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^17.4.2"
  },
  "keywords": [
    "wordpress",
    "cypress",
    "cywp",
    "e2e",
    "test"
  ],
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "./src/**"
    ],
    "testTimeout": 20000
  },
  "release": {
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "Release: ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "feature/continuous-deploymen",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "eslint"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/changelog"
    ]
  }
}
